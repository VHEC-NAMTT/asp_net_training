@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #background {
        background-color: #e3e5e3;
        width: 360px;
        height: 400px;
        border-radius: 12px;
        border: 1px solid;
        top: 50%;
        margin-top: -200px;
        left: 50%;
        margin-left: -180px;
        position: absolute;
    }

    #title {
        font-size: 30px;
        color: black;
        text-align: center;
        padding-top: 70px;
    }

    #txt {
        font-size: 12px;
        color: black;
        text-align: right;
        padding: 8px 0px 8px 0px;
    }

    #colInput {
        padding-left: 7px;
        width: 75%
    }

    #txtbox {
        font-size: 15px;
        color: black;
        padding: 5px;
        border-radius: 5px;
        border: none;
        width: 235px;
    }

    #btnLogin {
        font-size: 15px;
        color: white;
        padding: 5px 25px 5px 25px;
        background-color: #2171e0;
        border-radius: 7px;
        margin-top: 20px;
        float: right;
        border: none;
    }

    #distanceTitle {
        margin-top: 50px;
    }

    #distanceTxt {
        margin-top: 10px;
    }

    #placeholder {
    }
</style>
<h2></h2>
<body>
    <div id="background" class="row">
        <div id="title" class="row">
            Login System
        </div>
        <div id="distanceTitle" class="row">
            <div id="txt" class="col-xs-3">
                Username
            </div>
            <div id="colInput" class="col-xs-8">
                <input id="txtbox" type="text" placeholder="Username" maxlength="200"/>
            </div>
        </div>
        <div id="distanceTxt" class="row">
            <div id="txt" class="col-xs-3">
                Password
            </div>
            <div id="colInput" class="col-xs-8">
                <input id="txtbox" type="password" placeholder="Password" maxlength="40" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-11">
                <button id="btnLogin">Login</button>
            </div>
        </div>
    </div>
</body>